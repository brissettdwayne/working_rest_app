<h1>Who Gives A Hoot!</h1>
<div class="main-page">
  <p>Employee Login</p>

  <%= form_tag '/sessions', method: :post do %>

  <div class="form">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class="form">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>


  <%= submit_tag "Log In", class: 'log-in' %>

  <%end%>

  <%= button_to "Sign Up", new_waiter_path, method: :get, class: 'sign_up' %>
</div>
